<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Dynamic color brushes that can be changed at runtime by ThemeManager -->
  <SolidColorBrush x:Key="AccentColor" Color="#FF3D1A6E" />
  <SolidColorBrush x:Key="BackgroundColor" Color="#FF0A0A0F" />
  <SolidColorBrush x:Key="TextColor" Color="#FFFFFFFF" />

  <!-- Static color palette for supporting UI elements -->
  <Color x:Key="PanelColor">#FF0F0F14</Color>
  <Color x:Key="MutedText">#FF9A9AA0</Color>

  <!-- Direct brush references (use the brushes directly, they're already SolidColorBrush) -->
  <!-- These are redundant since we have AccentColor, BackgroundColor, TextColor already defined above as brushes -->
  <SolidColorBrush x:Key="AccentBrush" Color="#FF3D1A6E" />
  <SolidColorBrush x:Key="PanelBrush" Color="#FF0F0F14" />
  <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF" />
  <SolidColorBrush x:Key="MutedTextBrush" Color="#FF9A9AA0" />

  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
    <Setter Property="Foreground" Value="{StaticResource TextColor}" />
  </Style>

  <Style TargetType="Button">
    <Setter Property="Background" Value="{StaticResource AccentBrush}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Padding" Value="8,6" />
    <Setter Property="Margin" Value="4" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

</ResourceDictionary>
