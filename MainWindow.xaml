<Window x:Class="Hawkbat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anticheat"
        Width="1000" Height="700" WindowStartupLocation="CenterScreen"
        Icon="/Resources/logo.png"
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Border BorderBrush="#0078D4" BorderThickness="1" Background="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#000000" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Source="/Resources/logo.png" Width="20" Height="20" Margin="8,0,0,0" />
                <TextBlock Grid.Column="1" Text="Anticheat" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="White" FontSize="12" />

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="_" Width="46" Height="32" 
                            Background="Transparent" Foreground="White" 
                            BorderThickness="0" FontSize="16" 
                            Click="MinimizeButton_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                    <Button Content="□" Width="46" Height="32" 
                            Background="Transparent" Foreground="White" 
                            BorderThickness="0" FontSize="14" 
                            Click="MaximizeButton_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                    <Button Content="✕" Width="46" Height="32" 
                            Background="Transparent" Foreground="White" 
                            BorderThickness="0" FontSize="16" 
                            Click="CloseButton_Click"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#C42B1C" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />
        </Grid>
    </Border>
</Window>
