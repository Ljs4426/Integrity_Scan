<UserControl x:Class="Hawkbat.Views.LocalScriptPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#012456"
             Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#012456" BorderBrush="#0078D4" BorderThickness="0,0,0,1" Padding="12,8">
            <TextBlock Text="LOCAL Unit - PowerShell Terminal"
                       FontFamily="Consolas"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>
        
        <!-- Terminal Input Area -->
        <ScrollViewer Grid.Row="1" 
                      Background="#012456" 
                      Padding="12"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Paste your PowerShell script below and click Run:"
                           FontFamily="Consolas"
                           FontSize="12"
                           Foreground="#AAAAAA"
                           Margin="0,0,0,8"/>
                           
                <TextBox x:Name="ScriptTextBox"
                         FontFamily="Consolas"
                         FontSize="11"
                         Foreground="#FFFFFF"
                         Background="#001838"
                         BorderBrush="#0078D4"
                         BorderThickness="1"
                         MinHeight="400"
                         Padding="8"
                         TextWrapping="NoWrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Bar -->
        <Border Grid.Row="2" Background="#0078D4" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Paste script above and press Run to execute with Administrator privileges"
                           FontFamily="Consolas"
                           FontSize="11"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Run Script"
                            Click="OnRunClicked"
                            Background="#000000"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,6"
                            Margin="0,0,8,0"
                            FontFamily="Consolas"
                            FontWeight="Bold"/>
                    <Button Content="Cancel"
                            Click="OnCancelClicked"
                            Background="#C42B1C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,6"
                            FontFamily="Consolas"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
