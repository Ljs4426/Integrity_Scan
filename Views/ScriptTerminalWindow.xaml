<Window x:Class="Hawkbat.Views.ScriptTerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerShell - Script Execution"
        Width="900" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#012456"
        Foreground="White"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="TerminalButton">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#012456" BorderBrush="#0078D4" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Windows PowerShell"
                           FontFamily="Consolas"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1"
                        Content="âœ•"
                        Click="OnCloseClick"
                        Style="{StaticResource TerminalButton}"
                        FontSize="16"
                        Width="40"
                        Height="32"
                        Background="#C42B1C"
                        ToolTip="Close Terminal"/>
            </Grid>
        </Border>
        
        <!-- Terminal Output -->
        <ScrollViewer Grid.Row="1" 
                      x:Name="OutputScroller"
                      Background="#012456" 
                      Padding="12"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="OutputText"
                       FontFamily="Consolas"
                       FontSize="12"
                       Foreground="#FFFFFF"
                       TextWrapping="NoWrap"
                       LineHeight="18"/>
        </ScrollViewer>
        
        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="#0078D4" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           x:Name="StatusText"
                           Text="Script running... Press Enter to send blank line or use X button to close"
                           FontFamily="Consolas"
                           FontSize="11"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="ProgressText"
                               Text="Running"
                               FontFamily="Consolas"
                               FontSize="11"
                               Foreground="White"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
