<Page x:Class="Hawkbat.Views.Wizard.WizardChoosePacksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource BackgroundColor}"
      Loaded="Page_Loaded">
    <Grid Margin="40">
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Choose Unit Packs"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,0,0,16"/>

            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
                <StackPanel x:Name="PacksPanel" Orientation="Vertical"/>
            </ScrollViewer>

            <TextBlock Text="You can add more unit packs at any time from the main menu."
                       FontSize="11"
                       Foreground="#999999"
                       Margin="0,0,0,12"/>

            <TextBlock x:Name="SkipLinkContainer" Margin="0,0,0,16">
                <Hyperlink Click="OnSkipClicked" Foreground="#999999" FontSize="11">
                    <Run>Skip â€” install minimal pack only</Run>
                </Hyperlink>
            </TextBlock>

            <TextBlock x:Name="ErrorMessage"
                       Text="Could not load available packs. A minimal scan pack will be installed by default."
                       FontSize="11"
                       Foreground="#FF6B6B"
                       Visibility="Collapsed"
                       Margin="0,0,0,12"/>
        </StackPanel>
    </Grid>
</Page>
