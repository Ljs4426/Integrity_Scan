<Page x:Class="Hawkbat.Views.Wizard.WizardDownloadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource BackgroundColor}"
      Loaded="Page_Loaded">
    <Grid Margin="40">
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Downloading Unit Packs"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,0,0,16"/>

            <ProgressBar x:Name="ProgressBar"
                         Height="4"
                         Background="#333333"
                         Foreground="{DynamicResource AccentColor}"
                         Value="0"
                         Maximum="100"
                         Margin="0,0,0,16"/>

            <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
                <TextBlock x:Name="LogText"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="11"
                           Foreground="#CCCCCC"
                           LineHeight="16"/>
            </ScrollViewer>

            <TextBlock x:Name="CompletionText"
                       Text="âœ“ Download complete. Click Finish to get started."
                       FontSize="12"
                       Foreground="#00DD00"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
