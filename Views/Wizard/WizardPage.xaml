<UserControl x:Class="Hawkbat.Views.Wizard.WizardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundColor}"
             Foreground="{DynamicResource TextColor}">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
            <!-- Progress Indicator -->
            <Border Background="#1A1A1F" Padding="20" BorderThickness="0,0,0,1" BorderBrush="#333333">
                <TextBlock x:Name="ProgressText"
                           FontSize="12"
                           Foreground="#999999"
                           Text="Step 1 of 3"/>
            </Border>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>

            <!-- Bottom Buttons -->
            <Border Background="#1A1A1F" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#333333">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BackButton"
                            Content="Back"
                            Background="Transparent"
                            Foreground="{DynamicResource TextColor}"
                            BorderBrush="#666666"
                            BorderThickness="1"
                            Padding="12,8"
                            Click="OnBackClicked"
                            Visibility="Collapsed"
                            Margin="0,0,12,0"/>
                    <Button x:Name="NextButton"
                            Content="Continue"
                            Background="{DynamicResource AccentColor}"
                            Foreground="{DynamicResource TextColor}"
                            Padding="24,8"
                            Click="OnNextClicked"
                            Margin="0,0,12,0"/>
                    <Button x:Name="FinishButton"
                            Content="Finish"
                            Background="{DynamicResource AccentColor}"
                            Foreground="{DynamicResource TextColor}"
                            Padding="24,8"
                            Click="OnFinishClicked"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
