<Page x:Class="Hawkbat.Views.UsernamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource BackgroundColor}"
      Title="Enter Username">

  <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="480">
      <TextBlock Text="Enter your username" FontSize="20" Margin="0,0,0,8" Foreground="{DynamicResource TextColor}" />
      <TextBox x:Name="UsernameBox" FontSize="16" Height="36" Foreground="{DynamicResource TextColor}" Background="#1A1A1A" BorderBrush="{DynamicResource AccentColor}" BorderThickness="1" Padding="8" />
      <TextBlock Text="This will be hashed before any storage. Plain text is never saved." Foreground="{DynamicResource MutedTextBrush}" Margin="0,8,0,4" />
      <Border Height="1" Background="{DynamicResource AccentColor}" Margin="0,12,0,16" />
      <Button Content="Continue" Width="140" HorizontalAlignment="Left" Click="OnContinueClicked" Background="{DynamicResource AccentColor}" Foreground="{DynamicResource TextColor}" />
    </StackPanel>
  </Grid>
</Page>
