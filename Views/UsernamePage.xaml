<Page x:Class="Hawkbat.Views.UsernamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Enter Username">

  <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="480">
      <TextBlock Text="Enter your username" FontSize="20" Margin="0,0,0,8" />
      <TextBox x:Name="UsernameBox" FontSize="16" Height="36" />
      <TextBlock Text="This will be hashed before any storage. Plain text is never saved." Foreground="{StaticResource MutedTextBrush}" Margin="0,8,0,16" />
      <Button Content="Continue" Width="140" HorizontalAlignment="Left" Click="OnContinueClicked" />
    </StackPanel>
  </Grid>
</Page>
